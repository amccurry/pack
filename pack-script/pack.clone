#!/bin/bash
set -e
if [ "$#" -ne 3 ]; then
  echo "Usage:"
  echo "${0} <existing volumename> <snapshot id> <new volumename>"
fi

EXISTING_VOLUME_NAME="${1}"
EXISTING_SNAPSHOT_ID="${2}"
NEW_VOLUME_NAME="${3}"

curl -X POST localhost:4567/api/v1.0/volume/clone/${EXISTING_VOLUME_NAME}/${EXISTING_SNAPSHOT_ID}/${NEW_VOLUME_NAME} 2>/dev/null | jq -r '.'
