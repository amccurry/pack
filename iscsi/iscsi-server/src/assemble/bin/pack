#!/bin/bash
set -e

if [ -z ${PACK_PARCEL+x} ] ; then
  DIR="$( cd "$( dirname $(readlink -f "${BASH_SOURCE[0]}") )" && pwd )/.."
else
  DIR="${PACK_PARCEL}"
fi

for f in ${DIR}/jars/*
do
  export CLASSPATH="${CLASSPATH}:${f}"
done
for f in ${DIR}/lib/*
do
  export CLASSPATH="${CLASSPATH}:${f}"
done

if [ -f /etc/pack/conf/packenv ] ; then
  . /etc/pack/conf/packenv
fi

exec -a pack-cli java -Xmx64m -Xms64m $JAVA_OPTIONS iscsi.cli.Main "$@"
