<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>parcel</id>
	<formats>
		<format>dir</format>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<dependencySets>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>${project.name}/jars</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>pack:iscsi-server</include>
				<include>pack:iscsi-spi</include>
				<include>pack:iscsi-sm-distributed</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>${project.name}/lib</outputDirectory>
			<unpack>false</unpack>
			<excludes>
				<exclude>pack:iscsi-server</exclude>
				<exclude>pack:iscsi-spi</exclude>
				<exclude>pack:iscsi-sm-distributed</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/assemble/bin</directory>
			<outputDirectory>${project.name}/bin</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
