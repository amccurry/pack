<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>parcel</id>
	<formats>
		<format>dir</format>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>${parcel.name}-${parcel.version}/lib</outputDirectory>
			<unpack>false</unpack>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>${parcel.name}-${parcel.version}/lib-test</outputDirectory>
			<unpack>false</unpack>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/assemble/parcel/meta</directory>
			<outputDirectory>${parcel.name}-${parcel.version}/meta</outputDirectory>
			<excludes>
				<exclude>**/.empty</exclude>
				<exclude>**/parcel.json</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/assemble/parcel/bin</directory>
			<outputDirectory>${parcel.name}-${parcel.version}/bin</outputDirectory>
		</fileSet>
	</fileSets>

	<files>
		<file>
			<source>${project.basedir}/src/assemble/parcel/meta/parcel.json</source>
			<outputDirectory>${parcel.name}-${parcel.version}/meta</outputDirectory>
			<destName>parcel.json</destName>
			<filtered>true</filtered>
		</file>
	</files>
</assembly>
